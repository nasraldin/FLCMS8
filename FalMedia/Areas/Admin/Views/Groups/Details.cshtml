@model FalMedia.Areas.Admin.Models.Group

@{
    ViewBag.Title = Resources.Groups;
    ViewBag.ActiveTitle = Resources.Details;
    ViewBag.LinkName = Resources.AddGroup;
    ViewBag.Action = "Create";
    ViewBag.Controller = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    ViewBag.Controller2 = Resources.Group;
}

<div class="row">
    <div class="col s8" style="float: none; margin: 0 auto;">
        <h3 class="posthader">@Resources.Group</h3>
        <div class="card">
            <div class="container">
                <div class="row">

                    <div class="input-field col s4">
                        @Html.LabelFor(model => model.Name)
                        @Html.TextBoxFor(model => model.Name, new {@class = "", disabled = ""})
                    </div>
                    <div class="input-field col s4">
                        @Html.LabelFor(model => model.Description)
                        @Html.TextBoxFor(model => model.Description, new {@class = "", disabled = ""})
                    </div>

                </div>


                <div class="row">
                    <div class="input-field col s12">
                        <fieldset class="fieldset">
                            <legend>List of permissions in this group</legend>
                            @if (ViewBag.PermissionsCount == 0)
                            {
                                <h3 class="text-info">No permissions found!</h3>
                            }

                            @foreach (var item in ViewBag.RolesList)
                            {
                                <div class="switch">
                                    @item :
                                    <label style="position: inherit;">
                                        <input type="checkbox" name="" checked="checked" disabled="disabled">
                                        <span class="lever"></span> On
                                    </label>
                                </div>
                                <br/>
                            }
                        </fieldset>
                    </div>
                </div>
                <div class="input-field col s12" style="margin-bottom: 20px;">
                    @Html.ActionLink("Back", "Index", null, new {@class = "btn btn-block blue"})
                </div>
            </div>
        </div>
    </div>
</div>