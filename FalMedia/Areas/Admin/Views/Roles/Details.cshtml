@model FalMedia.Areas.Admin.Models.Role

@{
    ViewBag.Title = Resources.Permissions;
    ViewBag.ActiveTitle = Resources.Details;
    ViewBag.LinkName = Resources.AddRole;
    ViewBag.Action = "Create";
    ViewBag.Controller = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    ViewBag.Controller2 = Resources.Role;
}

<div class="row">
    <div class="col s8" style="float: none; margin: 0 auto;">
        <h3 class="posthader">@Resources.Role</h3>
        <div class="card">
            <div class="container">
                <div class="row">

                    <div class="input-field col s4">
                        @Html.LabelFor(model => model.Name)
                        @Html.TextBoxFor(model => model.Name, new {@class = "", disabled = ""})
                    </div>
                    <div class="input-field col s4">
                        @Html.LabelFor(model => model.Description)
                        @Html.TextBoxFor(model => model.Description, new {@class = "", disabled = ""})
                    </div>

                </div>


                <div class="row">
                    <div class="input-field col s12">
                        <fieldset class="fieldset">
                            <legend>List of users in this role</legend>
                            @if (ViewBag.UserCount == 0)

                            {
                                <h3 class="text-info">No users found in this role.</h3>
                            }
                            <ul class="list-group">
                                @foreach (var item in ViewBag.Users)

                                {
                                    <li class="list-group-item">@item.UserName</li>
                                }
                            </ul>
                        </fieldset>

                    </div>
                </div>
                <div class="input-field col s12" style="margin-bottom: 20px;">
                    @Html.ActionLink("Back", "Index", null, new {@class = "btn btn-block blue"})
                </div>
            </div>
        </div>
    </div>
</div>