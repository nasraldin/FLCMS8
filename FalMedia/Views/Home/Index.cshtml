<!-- Contact Us -->
<section id="contact-us" class="contact-us scrollspy">
    <div class="container">
        <div class="section">
            <div class="row">
                <header class="section-header">
                    <h2 class="headtitle">
                        @(Culture.Equals("ar") ? ViewData["contactTitleAr"] : ViewData["contactTitle"])
                    </h2>
                    <p>
                        @(Culture.Equals("ar") ? ViewData["contactDescriptionAr"] : ViewData["contactDescription"])
                    </p>
                </header>
                <div class="row">
                    <div class="col s12 m6 l6">
                        <div class="row contact">
                            <div class="col s12">
                                @Html.Partial("_ContactUs")
                            </div>
                        </div>
                    </div>
                    <div class="col s12 m6 l6 push-l2">
                        <div class="info-contact-wrapper">
                            <div class="contact-heading">
                                <h2 class="">@Resources.Contactinformation</h2>
                            </div>
                            <div class="info-contact">
                                <div class="col s12">
                                    <p>
                                        <i class="fa fa-map-marker"></i>
                                        <span>@ViewBag.Address</span>
                                    </p>
                                    <p>
                                        <i class="fa fa-phone"></i>
                                        <span>@ViewBag.PhoneNumber</span>
                                    </p>
                                    <p>
                                        <i class="fa fa-mobile"></i>
                                        <span>@ViewBag.Mobile</span>
                                    </p>
                                    <p>
                                        <i class="fa fa-envelope"></i>
                                        <span>
                                            <a href="mailto:@(ViewBag.EmailAddress)">
                                                @ViewBag.EmailAddress
                                            </a>
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Contact Us -->
@Html.Partial("_GoogleMap")

@section scripts{
    @foreach (var services in ViewBag.Services)
    {
        <script>
            $("#serv-@services.Id")
                .hover(function() {
                        $("#serv-@services.Id span img").attr("src", "../Content/img/@services.Thumbnail");
                        $("#serv-@services.Id span img").addClass("animated bounce");
                    },
                    function() {
                        $("#serv-@services.Id span img").attr("src", "/uploads/posts/@services.Thumbnail");
                        $("#serv-@services.Id span img").removeClass("animated bounce");
                    });
        </script>
    }
}