@using FalMedia.Core
@{
    ViewBag.Title = Resources.Home;
}

@Html.Partial("_Slider")
<!-- about -->
<section id="about" class="about scrollspy">
    <div class="container">
        <div class="section">
            <div class="row">
                <div class="section-header col s12 m12 l12">
                    <h2 class="headtitle wow slideInDown">
                        @(Culture.Equals("ar") ? ViewData["aboutTitleAr"] : ViewData["aboutTitle"])
                    </h2>

                    <p class="center wow slideInLeft">
                        @(Culture.Equals("ar") ? ViewData["aboutDescriptionAr"] : ViewData["aboutDescription"])
                    </p>
                </div>
                <!-- items -->
                @foreach (var aboutUs in ViewBag.Aboutus)
                {
                    if (Culture.Equals("ar"))
                    {
                        ViewBag.isright = "right";
                    }
                    <div class="@ViewBag.isright col s12 m3 l3 wow zoomIn">

                        <div class="box-block">
                            <span class="center brown-text">
                            <i class="fa @(aboutUs.ShortDescription) fa-5x" aria-hidden="true" title="@(Culture.Equals("ar") ? aboutUs.TitleAr : aboutUs.Title)"></i>
                        </span>
                            <h5 class="center">
                                @(Culture.Equals("ar") ? aboutUs.TitleAr : aboutUs.Title)
                            </h5>

                            <p class="@ViewBag.isright">
                                @Html.Raw(Culture.Equals("ar") ? aboutUs.ContentAr : aboutUs.Content)
                            </p>
                        </div>
                    </div>
                }
                <!-- end items -->
            </div>
        </div>
    </div>
</section>
<!-- End about -->
<!-- Services -->
<section id="services" class="services scrollspy">
    <div class="container">
        <div class="section">
            <div class="row">
                <div class="col s12 m12 l12">
                    <div class="section-header wow zoomIn">
                        <h2 class="headtitle">
                            @(Culture.Equals("ar") ? ViewData["servTitleAr"] : ViewData["servTitle"])
                        </h2>
                        <p class="center-align">
                            @(Culture.Equals("ar") ? ViewData["servicesDescriptionAr"] : ViewData["servicesDescription"])
                        </p>
                    </div>
                </div>
                <div class="serviceslist col s12 m12 l12">
                    <!-- items -->
                    @foreach (var services in ViewBag.Services)
                    {
                        if (Culture.Equals("ar"))
                        {
                            ViewBag.isright = "right";
                        }
                        <div class="box-item @ViewBag.isright col s12 m3 l3 wow slideInUp">
                            <div class="box-block" id="serv-@services.Id">
                                <span class="center box-icon">
                                    <img src="@Url.Content("~/uploads/posts/" + services.Thumbnail)" alt="" />
                                </span>
                                <a href="@(CultureHelper.GetCurrentNeutralCulture() + "/p/v/" + services.Id)">
                                    <h5 class="center">
                                        @(Culture.Equals("ar") ? services.TitleAr : services.Title)
                                    </h5>
                                </a>
                            </div>
                        </div>
                    }
                    <!-- end items -->
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Services -->
