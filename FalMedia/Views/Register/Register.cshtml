@model FalMedia.Areas.Admin.ViewModel.AddUserViewModel
@{
    ViewBag.Title = "Register";
    Layout = "_Auth.cshtml";
}
@using (Html.BeginForm("Index", "Register", new {ViewBag.ReturnUrl}, FormMethod.Post, new {role = "form"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new {@class = "red"})
    <div class="row margin">
        <div class="input-field col s12">
            <i class="mdi-social-person-outline prefix"></i>
            @Html.TextBoxFor(m => m.UserName, new {autofocus = "autofocus"})
            @Html.LabelFor(m => m.UserName, new {@class = "center-align"})
            @Html.ValidationMessageFor(model => model.UserName)
        </div>
    </div>
    <div class="row margin">
        <div class="input-field col s12">
            <i class="mdi-communication-email prefix"></i>
            @Html.TextBoxFor(m => m.Email)
            @Html.LabelFor(m => m.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
    </div>
    <div class="row margin">
        <div class="input-field col s12">
            <i class="mdi-action-lock-outline prefix"></i>
            @Html.PasswordFor(m => m.Password)
            @Html.LabelFor(m => m.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>
    </div>
    <div class="row margin">
        <div class="input-field col s12">
            <i class="mdi-action-lock-outline prefix"></i>
            @Html.PasswordFor(m => m.ConfirmPassword)
            @Html.LabelFor(m => m.ConfirmPassword)
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
            <input type="submit" value="Register Now" class="btn col s12"/>
        </div>
        <div class="input-field col s12">
            <p class="margin center medium-small sign-up">
                Already have an account? <a href="@("Login")">Login</a>
            </p>
        </div>
    </div>
}